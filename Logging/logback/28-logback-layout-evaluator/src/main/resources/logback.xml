<configuration>
    <evaluator name="DISP_CALLER_EVAL">
        <expression>logger.contains("com.eaz.logback.layout.evaluator") &amp;&amp; message.contains("who calls thee")</expression>
    </evaluator>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender"> 
        <encoder>
            <pattern>
                <!-- With the caller conversion word, caller data is output when the expression evaluates to true. -->
                %-4relative [%thread] %-5level - %msg%n%caller{2, DISP_CALLER_EVAL}
            </pattern>
        </encoder>
    </appender>

    <root level="DEBUG"> 
        <appender-ref ref="STDOUT" /> 
    </root>
</configuration>